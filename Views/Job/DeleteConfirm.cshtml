﻿@model Job_Portal.Models.JobDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Job</h2>

<h3>Are you sure you want to delete this job?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Company
        </dt>
        <dd class="col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Posted Date
        </dt>
        <dd class="col-sm-10">
            @Model.PostedDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Job Category
        </dt>
        <dd class="col-sm-10">
            @Model.JobCategoryName
        </dd>
    </dl>
</div>

<form action="/Job/Delete/@Model.JobId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Details", new { id = Model.JobId })" class="btn btn-secondary">Cancel</a>
</form>