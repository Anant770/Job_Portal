﻿@model Job_Portal.Models.JobDto


@{
    ViewBag.Title = "View";
}

<h2>Job Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Company
        </dt>
        <dd class="col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Posted Date
        </dt>
        <dd class="col-sm-10">
            @Model.PostedDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Job Category
        </dt>
        <dd class="col-sm-10">
            @Model.JobCategoryName
        </dd>
    </dl>
</div>

<p>
    <a href="@Url.Action("Edit", new { id = Model.JobId })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("DeleteConfirm", new { id = Model.JobId })" class="btn btn-danger">Delete</a>
    <a href="@Url.Action("List")" class="btn btn-secondary">Back to List</a>
</p>