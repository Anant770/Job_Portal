@model IEnumerable<Job_Portal.Models.CompanyDto>

@{
    ViewBag.Title = "Company List";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewBag.Title</h2>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Company Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a href="@Url.Action("Details", "Company", new { id = item.CompanyId })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Company", new { id = item.CompanyId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteConfirm", "Company", new { id = item.CompanyId })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("New", "Company")" class="btn btn-primary mt-3">Add New Company</a>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
