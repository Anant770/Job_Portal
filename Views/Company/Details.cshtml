@model Job_Portal.Models.CompanyDto

@{
    ViewBag.Title = "Company Details";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewBag.Title</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text"><strong>Address:</strong> @Model.Address</p>
            <div class="mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyId }, new { @class = "btn btn-warning mr-2" })
                @Html.ActionLink("Back to List", "List", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
